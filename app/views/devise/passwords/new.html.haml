%h2 Forgot your password?
= simple_simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
  = devise_error_messages!
  .row
    .columns.medium-6
      = f.label :email
      = f.email_field :email, autofocus: true
  .row
    .columns.medium-6
      .actions
        = f.submit "Reset password", class: 'button'
.row
  .columns
    = render "devise/shared/links"
